---
import "../styles/global.css";
import Footer from "@components/layouts/footer.astro";
import Navigation from "@components/layouts/navigation";
import { SEO } from "astro-seo";
import site from "@data/site.json";
import ThemeEditableWrapper from "@components/shared/ThemeEditableWrapper";

export interface SEOProps {
  page_description: string | null;
  featured_image: string | null;
  featured_image_alt: string | null;
  canonical_url: string | null;
  no_index: boolean | null;
  open_graph_type: string | null;
  author_twitter_handle: string | null;
}

export interface Props {
  title: string;
  seo?: SEOProps;
}

const { seo } = Astro.props;
const baseUrl = Astro.site;
const title = Astro.props.title ? `${Astro.props.title} | ${site.site_title}` : site.site_title;
const description = seo?.page_description || site.description;
const image = seo?.featured_image || site.image;
const image_alt = seo?.featured_image_alt || site.image_alt;
const canonicalURL = new URL(seo?.canonical_url ?? Astro.url.pathname, baseUrl);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <link rel="icon" href="/images/favicon.png" type="image/x-icon" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/touch-icon.png" sizes="192x192" />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      noindex={seo?.no_index || false}
      title={title}
      description={description}
      canonical={canonicalURL.toString()}
      openGraph={{
        basic: {
          title: Astro.props.title,
          url: baseUrl?.toString(),
          type: `${seo?.open_graph_type || "website"}`,
          image: image,
        },
        optional: {
          description: description,
        },
        image: {
          url: image,
          alt: image_alt,
        },
      }}
      twitter={{
        creator: `${seo?.author_twitter_handle || site.twitter_site}`,
        site: `${site.twitter_site}`,
        card: "summary_large_image",
      }}
    />
  </head>
  <body class="min-h-screen flex flex-col bg-white">
    <script>
      // Lazy load CloudCannon component registration only when in editor mode
      if (window?.inEditorMode) {
        import("../scripts/register-components.ts").catch((error) => {
          console.warn("Failed to load CloudCannon component registration:", error);
        });
      }
    </script>
    <script>
      import("../scripts/locale-injector.ts").catch((error) => {
        console.warn("Failed to load locale injector:", error);
      });
    </script>
    <editable-component data-component="layouts/Navigation" data-prop="@data[navigation]">
      <Navigation client:load pageUrl={canonicalURL} />
    </editable-component>
    <div class="flex-1">
      <slot />
    </div>
    <Footer />

    <ThemeEditableWrapper client:only="react" />
  </body>
</html>
