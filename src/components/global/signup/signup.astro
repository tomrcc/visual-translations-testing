---
import Heading from "../../shared/Heading.astro";
import Button from "../../shared/Button.astro";

// Define TypeScript interfaces
interface FormField {
  heading: string;
  placeholder?: string;
}

interface ButtonType {
  link: string;
  text: string;
}

interface Form {
  fullname: FormField;
  email: FormField;
  password: FormField;
  retype_password: FormField;
  checkbox_text: string;
  sign_up_text: string;
  log_in_button: ButtonType;
}

interface Props {
  title: string;
  form: Form;
}

const { title, form } = Astro.props;
---

<section class="py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-2xl shadow-xl p-8 lg:p-12">
        <Heading level={2} text={title} data-prop="title" data-editable="text" class="text-center mb-8" />
        <form class="space-y-6">
          <div>
            <label for="fullName" class="block text-sm font-medium text-gray-700 mb-2">
              <editable-text data-prop="form.fullname.heading">{form.fullname.heading}</editable-text>
            </label>
            <input
              type="text"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
              id="fullName"
              placeholder={form.fullname.placeholder}
            />
          </div>

          <div>
            <label for="pEmailId" class="block text-sm font-medium text-gray-700 mb-2">
              <editable-text data-prop="form.email.heading">{form.email.heading}</editable-text>
            </label>
            <input
              type="email"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
              id="pEmailId"
              placeholder={form.email.placeholder}
            />
          </div>

          <div>
            <label for="setpassword" class="block text-sm font-medium text-gray-700 mb-2">
              <editable-text data-prop="form.password.heading">{form.password.heading}</editable-text>
            </label>
            <div class="relative">
              <input
                type="password"
                id="setpassword"
                class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                placeholder={form.password.placeholder}
              />
              <button
                type="button"
                class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-400 hover:text-gray-600"
                onclick="togglePassword('setpassword', this)">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
              </button>
            </div>
          </div>

          <div>
            <label for="Re-password" class="block text-sm font-medium text-gray-700 mb-2">
              <editable-text data-prop="form.retype_password.heading">{form.retype_password.heading}</editable-text>
            </label>
            <div class="relative">
              <input
                type="password"
                class="w-full px-4 py-3 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
                id="Re-password"
                placeholder={form.retype_password.placeholder}
              />
              <button
                type="button"
                class="absolute inset-y-0 right-0 flex items-center pr-4 text-gray-400 hover:text-gray-600"
                onclick="togglePassword('Re-password', this)">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                  ></path>
                </svg>
              </button>
            </div>
          </div>

          <div>
            <div class="flex items-start">
              <input
                class="w-4 h-4 mt-0.5 text-primary bg-gray-100 border-gray-300 rounded focus:ring-primary focus:ring-2"
                type="checkbox"
                id="gridCheck"
              />
              <label class="ml-3 text-sm text-gray-700" for="gridCheck">
                <editable-text data-prop="form.checkbox_text">{form.checkbox_text}</editable-text>
              </label>
            </div>
          </div>

          <div>
            <Button
              type="submit"
              variant="primary"
              size="lg"
              text={form.sign_up_text}
              data-prop="form.sign_up_text"
              data-editable="text"
              class="w-full"
            />
          </div>

          <div class="relative my-6">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500">or</span>
            </div>
          </div>

          <div class="space-y-3">
            <button
              type="button"
              class="w-full flex items-center justify-center gap-3 px-4 py-3 border border-gray-300 rounded-lg bg-white text-gray-700 font-medium hover:bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M15.9649 17.0524C14.3566 18.4107 12.2703 19.2728 9.99918 19.2728C6.61971 19.2728 3.65312 17.411 2.04492 14.6944L2.647 11.919L5.31573 11.4236C5.93512 13.423 7.80412 14.89 9.99918 14.89C11.0641 14.89 12.0529 14.5531 12.8679 13.9555L15.4324 14.3467L15.9649 17.0524Z"
                  fill="#34A853"></path>
                <path
                  d="M15.9657 17.0523L15.4332 14.3465L12.8688 13.9553C12.0538 14.553 11.0649 14.8898 10 14.8898V19.2727C12.2711 19.2727 14.3575 18.4106 15.9657 17.0523Z"
                  fill="#34A853"></path>
                <path
                  d="M5.10938 9.99998C5.10938 10.4998 5.18544 10.9779 5.31584 11.4235L2.04503 14.6943C1.23004 13.3251 0.726562 11.7168 0.726562 9.99998C0.726562 8.28304 1.23004 6.67484 2.04503 5.30566L4.67012 5.75746L5.31584 8.57647C5.18544 9.02196 5.10938 9.50009 5.10938 9.99998Z"
                  fill="#FBBC05"></path>
                <path
                  d="M19.2711 9.99996C19.2711 12.8252 17.9636 15.3571 15.9641 17.0523L12.8672 13.9554C13.4974 13.4989 14.0299 12.8904 14.3776 12.1733H9.9984C9.6941 12.1733 9.45508 11.9342 9.45508 11.6299V8.36998C9.45508 8.06569 9.6941 7.82666 9.9984 7.82666H18.5757C18.8365 7.82666 19.0647 8.01135 19.1081 8.27215C19.2168 8.83724 19.2711 9.424 19.2711 9.99996Z"
                  fill="#EA4335"></path>
                <path
                  d="M14.3792 12.1733C14.0315 12.8904 13.499 13.4989 12.8688 13.9554L15.9657 17.0523C17.9652 15.3571 19.2727 12.8252 19.2727 9.99996C19.2727 9.424 19.2184 8.83724 19.1097 8.27215C19.0663 8.01135 18.838 7.82666 18.5772 7.82666H10V12.1733H14.3792Z"
                  fill="#EA4335"></path>
                <path
                  d="M16.117 3.3171C16.1279 3.46923 16.0627 3.61053 15.9649 3.71916L13.6395 6.03372C13.4548 6.22932 13.1505 6.25105 12.9332 6.08805C12.0746 5.44697 11.0641 5.11011 9.99918 5.11011C7.80412 5.11011 5.93512 6.57705 5.31573 8.57651L2.04492 5.3057C3.65312 2.58908 6.61971 0.727295 9.99918 0.727295C12.1616 0.727295 14.2697 1.52417 15.9214 2.91504C16.0409 3.01288 16.1061 3.16497 16.117 3.3171Z"
                  fill="#EA4335"></path>
                <path
                  d="M12.9339 6.08805C13.1513 6.25109 13.4555 6.22932 13.6402 6.03372L15.9657 3.71916C16.0635 3.61053 16.1287 3.46927 16.1178 3.3171C16.1069 3.16494 16.0417 3.01288 15.9222 2.91504C14.2705 1.52417 12.1624 0.727295 10 0.727295V5.11011C11.0649 5.11011 12.0755 5.44697 12.9339 6.08805Z"
                  fill="#EA4335"></path>
              </svg>
              Sign In with Google
            </button>

            <button
              type="button"
              class="w-full flex items-center justify-center gap-3 px-4 py-3 border border-gray-300 rounded-lg bg-white text-gray-700 font-medium hover:bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors">
              <svg width="20" height="20" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  fill="#1877F2"
                  fill-rule="evenodd"
                  clip-rule="evenodd"
                  d="M11.9 28.9508V19.0996H8.19995V14.6996H12V11.4996C12 7.59961 14.4 5.59961 17.7 5.59961C19.3 5.59961 20.7 5.69961 21.1 5.79961V9.79961H18.7999C16.9 9.69961 16.5 10.5996 16.5 11.7996V14.5996H21L20.4 18.9996H16.5V29.0775C23.6656 28.1463 29.2 22.0195 29.2 14.6C29.2 6.53664 22.6634 0 14.6 0C6.53664 0 0 6.53664 0 14.6C0 21.7409 5.12653 27.6844 11.9 28.9508Z"
                ></path>
              </svg>
              Sign In with Facebook
            </button>
          </div>

          <div class="border-t border-gray-200 pt-6 mt-9">
            <div class="text-center">
              <a data-astro-prefetch href={form.log_in_button.link} class="text-primary/40 hover:text-primary font-medium transition-colors">
                <editable-text data-prop="form.log_in_button.text">{form.log_in_button.text}</editable-text>
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  function togglePassword(inputId: string, button: HTMLElement) {
    const input = document.getElementById(inputId) as HTMLInputElement;
    if (!input) return;

    const isPassword = input.type === "password";
    input.type = isPassword ? "text" : "password";

    // Update icon
    const svg = button.querySelector("svg");
    if (!svg) return;

    if (isPassword) {
      // Show "eye with slash" icon for visible password
      svg.innerHTML = `
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
      `;
    } else {
      // Show normal "eye" icon for hidden password
      svg.innerHTML = `
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
      `;
    }
  }

  // Make function available globally
  (window as any).togglePassword = togglePassword;
</script>
